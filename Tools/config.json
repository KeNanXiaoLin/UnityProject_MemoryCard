{
  "global": {
    "excel_root": "../Excel",
    "json_output_root": "../Assets/StreamingAssets/Config",
    "enable_batch": true,
    "specified_files": ["config/role.xlsx"],
    "exclude_files": ["temp/test.xlsx"],
    "exclude_file_prefixes": ["~$", ".~lock.",".~"],
    "exclude_file_suffixes": ["_temp", ".tmp"],
    "recursive_scan": true,
    "encoding": "utf-8",
    "json_indent": 4,
    "overwrite_existing": true,
    "skip_empty_rows": true,
    "log_level": "info"
  },
  "excel_structure": {
    "type_index": 1,                  
    "field_index": 3,                 
    "desc_index": 2,                  
    "enum_defs": [
      {"key_index": 4, "value_index": 5, "desc_index": 6},  
      {"key_index": 7, "value_index": 8, "desc_index": 9},  
      {"key_index": 10, "value_index": 11, "desc_index": 12} 
    ],
    "data_start_index": 13,           
    "header_skip_empty": true,
    "sheet_name": "Sheet1",
    "support_types": {
      "int": {"convert": "int", "default": 0},
      "float": {"convert": "float", "default": 0.0},
      "bool": {"convert": "bool", "default": false},
      "str": {"convert": "str", "default": ""},
      "list[int]": {"convert": "list[int]", "separator": ",", "default": []},
      "list[float]": {"convert": "list[float]", "separator": ",", "default": []},
      "list[str]": {"convert": "list[str]", "separator": ",", "default": []},
      "enum": {"convert": "enum", "default": ""}
    },
    "type_error_strategy": "keep_raw"
  },
  "code_generate": {
    "generate_csharp": true,
    "csharp_output_root": "../Assets/Scripts/AutoGenerated/Data",
    "csharp_namespace": "KNXL.AutoGenerated.Data",
    "csharp_class_prefix": "Cfg",
    "csharp_access_modifier": "public",
    "csharp_enum_access_modifier": "public",
    "csharp_nested_enum": false,
    "generate_java": false,
    "java_output_root": "./output/java",
    "java_package": "com.KNXL.AutoGenerated.Data"
  },
  "validation": {
    "enable_validation": true,
    "required_fields": ["id"],
    "field_rules": {
      "id": {"min": 1, "max": 99999, "desc": "ID必须为1-99999的整数"},
      "name": {"min_length": 1, "max_length": 32, "desc": "名称长度1-32字符"}
    }
  }
}